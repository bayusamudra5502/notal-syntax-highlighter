{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Notasi Algoritmik",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#storages"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#datatypes"
    }
  ],
  "repository": {
    "datatypes": {
      "patterns": [
        {
          "name": "constant.numeric.notal",
          "match": "\\s*(\\d+|true|false)\\s*"
        },
        {
          "match": "\\w[\\d\\w\\_]+",
          "name": "entity.name"
        },
        {
          "match": "(\\s*:|\\s*\\-\\>)(\\s*\\w[\\w\\d]+)",
          "captures": {
            "2": { "name": "entity.name.type" }
          }
        },
        {
          "match": "\\.(\\w[\\w\\d]+)",
          "captures": {
            "1": {
              "name": "constant.character"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.notal",
          "match": "\\s*(if|while|tranversal|do|then|else|repeat|stop|iterate|stop)\\s*"
        },
        {
          "name": "keyword.other.notal",
          "match": "\\s*(type|use|program|constant|const)\\s*"
        },
        {
          "name": "markup.bold.notal",
          "match": "\\s*(ALGORITMA|KAMUS|LOKAL)\\s*"
        },
        {
          "name": "keyword.other.notal",
          "match": "input|output"
        },
        {
          "match": "\\s*(of)\\s*(\\w[\\w\\d]+)",
          "captures": {
            "1": { "name": "keyword.other" },
            "2": { "name": "entity.name.type" }
          }
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.notal",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.notal",
          "match": "\\\\."
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "and|or|xor|not"
        },
        {
          "name": "keyword.operator.notal",
          "match": "\\^|\\*|/|-|\\+"
        },
        {
          "name": "keyword.control.notal",
          "match": "shl|shr|div|mod"
        }
      ]
    },
    "storages": {
      "patterns": [
        {
          "match": "(function|procedure)(.+)\\(",
          "captures": {
            "1": {
              "name": "storage.modifier.notal"
            },
            "2": {
              "name": "entity.name.function.notal"
            }
          }
        },
        {
          "match": "(\\w+)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.notal"
            }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.notal",
          "begin": "{",
          "end": "}"
        }
      ]
    }
  },
  "scopeName": "source.notal"
}
